@model Product
<h1>Create Product</h1>
<form class="form" asp-action="Create" method="post">
    <div>
     <label  asp-for="ProductName" class="form-label"></label>
     <input class="form-control" asp-for="ProductName"/>
        <span asp-validation-for="ProductName" class="text-danger">
      </span>
    </div> 
    <div>

        <label class="form-label" asp-for="Quantity"></label>
     <input class="form-control" asp-for="Quantity"/>        
      <span asp-validation-for="Quantity" class="text-danger"></span>

    </div> 
    <button class="btn btn-primary mt-3" type="submit">Submit</button>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}