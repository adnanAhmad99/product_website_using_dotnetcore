@model IEnumerable<Product>

<h1>Home</h1>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Product Id</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        
@foreach(var obj in Model)
{
    <tr>
        <td>@obj.ProductId</td>
        <td>@obj.ProductName</td>
        <td>@obj.Quantity</td>
         <td>@obj.Category.CategoryName</td>
        <td>
                    <a asp-action="Details" asp-route-id=@obj.ProductId class="btn btn-success">Detail</a>
                    <a asp-action="Update" asp-route-id=@obj.ProductId class="btn btn-primary">Update</a>
                    <a asp-action="Delete" asp-route-id=@obj.ProductId class="btn btn-outline-danger ms-2">Delete</a>
        </td>
    </tr>    
}
    </tbody>
</table>
