@model Product
<div class="container">
    <div class="row">
        <div class="col-3">
            <div style="width:90%;">
                <img style="width:100%;" src="@Model.ImageUrl" />
            </div>
        </div>
        <div class="col-9">
            <h2>Product name: @Model.ProductName</h2>
            <p>Quantity: @Model.Quantity</p>
            <p>Category: @Model.Category.CategoryName</p>
            <div>
                <a asp-action="Update" asp-route-id=@Model.ProductId class="btn btn-primary">Update</a>
                <a asp-action="Delete" asp-route-id=@Model.ProductId class="btn btn-outline-danger ms-2">Delete</a>
            </div>
        </div>
    </div>
</div>